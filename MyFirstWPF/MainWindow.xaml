        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnSayHello" Content="Say hello!" HorizontalAlignment="Left" Margin="115,84,0,0" VerticalAlignment="Top" Width="188" FontSize="16" Height="29" Click="btnSayHello_Click"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="23" Margin="115,128,0,0" TextWrapping="Wrap" Text="Tähän tulee tervehdys" VerticalAlignment="Top" Width="188" TextChanged="textBox_TextChanged" FontWeight="Bold" FontFamily="Showcard Gothic" FontSize="14"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="115,46,0,0" TextWrapping="Wrap" Text="[kirjoita tähän nimesi]" VerticalAlignment="Top" Width="188"/>

    </Grid>
</Window>
